pipeline {
    agent {
        dockerfile true
    }

    parameters {
        string(name: "BP_REMOTE", defaultValue: "https://github.com/Pelagicore/software-factory-blueprint.git")
        string(name: "BP_BRANCH", defaultValue: "master")
    }

    stages {
        stage('Download') {
            steps {
                // Delete old files
                sh 'rm -rf .[^.] .??* *'

                // Checkout the git repository and refspec pointed to by jenkins
                checkout scm

                // Update the submodule
                sh "git submodule init"
                sh "git submodule update"

                // Check out the branch for which to test.
                sh "cd docs/swf-blueprint && git remote add jenkins ${params.BP_REMOTE}"
                sh "cd docs/swf-blueprint && git fetch jenkins ${params.BP_BRANCH}"
                sh "cd docs/swf-blueprint && git checkout jenkins/${params.BP_BRANCH}"
            }
        }

        // Configure the software with cmake
        stage('Configure') {
            steps {
                script {
                    String buildParams = "-DENABLE_PDF=OFF"
                    sh "rm -fr build"
                    sh "cmake -H. -Bbuild ${buildParams}"
                }
            }
        }

        stage("Build") {
            steps {
                sh "cd build && make"
            }
        }

        stage('Archive') {
            steps {
                script {
                    archive "build/**"
                }
            }
        }
    }

}
